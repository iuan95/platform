mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="/img/svg/sprite.svg#"+name)
mixin iconas(name)
	svg(class="icon icon-" + name + ' ' + name+"__style")
		use(xlink:href="/img/svg/sprite1.svg#"+name)

mixin icons(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="/img/svg/sprite1.svg#"+name)



